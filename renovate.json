{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "forkProcessing": true,
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 20,
  "branchConcurrentLimit": 30,
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "schedule": ["every weekend"]
}
